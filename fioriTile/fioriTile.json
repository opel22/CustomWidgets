    "properties": {
        "color": {
            "type": "string",
            "description": "Background color",
            "default": "red"
        },
        "opacity": {
            "type": "number",
            "description": "Opacity",
            "default": 1
        },
        "width": {
            "type": "integer",
            "default": 400
        },
        "height": {
            "type": "integer",
            "default": 400
        }
    },
    "methods": {
        "setColor": {
            "description": "Sets the background color.",
            "parameters": [
                {
                    "name": "newColor",
                    "type": "string",
                    "description": "The new background color"
                }
            ],
            "body": "this.color = newColor;"
        },
        "getColor": {
            "returnType": "string",
            "description": "Returns the background color.",
            "body": "return this.color;"
        }
    },
    "events": {
        "onClick": {
            "description": "Called when the user clicks the Fiori Tile."
        },
        "onHover": {
            "description": "Called when the user hovers the Fiori Tile."
        },
        "onEnter": {
            "description": "Called when the user enters the area of the Fiori Tile."
        },
        "onOut": {
            "description": "Called wehn the user left the area of the Fiori Tile."
        }
    },
